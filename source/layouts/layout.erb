  </head>
  <body class="<%= page_classes %>">
    <aside class="sidebar">
      <h1 class="site-name"><a href="/">~/Bin</a></h1>
      <nav class="global-nav">
        <ul>
          <li><a href="/">Posts</a></li>
          <li><a href="#TODO">Photos</a></li>
          <li><a href="/profile">Profile</a></li>
        </ul>        
