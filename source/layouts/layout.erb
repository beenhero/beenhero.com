      <nav class="social-connect">
        <ul>
          <li><a href="/rss.xml"><i class="icon-rss"></i></a></li>
          <li><a href="//twitter.com/beenhero"><i class="icon-twitter"></i></a></li>
          <li><a href="//facebook.com/beenhero"><i class="icon-facebook"></i></a></li>
          <li><a href="//weibo.com/beenhero"><i class="icon-weibo"></i></a></li>
        </ul>
      </nav>
      
      <!-- Ad -->
      <div class="block ad">
        <h4 class="block-title"><a href="//pragmatic.ly/">Pragmatic.ly</a></h4>
        <p class="block-cnt">团队协作工具</p>
      </div>

    </aside>

    <section class="main">
      <div class="container">
        <%= yield %>
      </div>
    </section>
    
    <footer>
      <div class="copyright">
        <p>&copy;2013 Bin He</p>
      </div>
    </footer>

